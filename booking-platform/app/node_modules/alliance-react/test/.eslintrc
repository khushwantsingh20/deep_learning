{
  "extends" : "../.eslintrc",
  "env"     : {
    "mocha" : true
  },
  "globals" : {
    "expect" : false,
    "should" : false,
    "sinon"  : false
  },
  "rules": {
    // This allows us to use chai syntax eg. expect(h1).to.exist; without lint errors
    "no-unused-expressions": 0,
    "react/no-multi-comp": 0,
    "react/prop-types": 0,
    "react/jsx-no-bind": 0
  }
}
